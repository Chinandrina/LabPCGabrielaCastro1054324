import math
print ("radio de la circunferencia")
num1 = input("ingrese un radio para la circunferencia")
num1 = float (num1) 

radio= num1
pi= math.pi
area= float(pi+radio**2)
perimetro =float(2*pi*radio)

print (f"El Ã¡rea de un circulo es {area:.2f}")
print (f"El perimetro de un circulo es {perimetro:.2f} ")