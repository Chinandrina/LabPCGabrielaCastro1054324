t1= input("Ingrese el tiempo del corredor 1 en segundos:  ")
t1= float (t1)
t2= input("Ingrese el tiempo del corredor 1 en segundos:  ")
t2= float (t2)
t3= input("Ingrese el tiempo del corredor 1 en segundos:  ")
t3= float (t3)
t4= input("Ingrese el tiempo del corredor 1 en segundos:  ")
t4= float (t4)

