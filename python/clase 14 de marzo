edad = int(input(" Ingrese un número:  "))

if edad<0 or edad >120:
    print("Noestán permitidas las edades negativas")
if edad>18:
    print("La persona es mayor de edad")
else: 
    print("La persona es menor de edad")




nota= int(input(" Ingrese un número:  "))
if nota<0 or edad >100:
    print("No valida")
else: 
    if nota>65:
    print("La persona aprobo el curso ")

else: 
print("La persona no aprobo el curso")



nota= int(input("Ingrese una nota en su examen;  "))
if nota < 0 or nota >100:
    print("Nota no Valida")
else
    if nota >=0 and nota<20:
        print("Facultad 1")
    elif 21<= nota <=40:
        print("Facultad 2")
    elif 41 <= nota <=60:
        print("Facultad 3")
    elif 61 <= nota <=80:
        print("Facultad 4")
    else:
        print("Facultad 5")



        